<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>登录</title>
  <link rel="stylesheet" href="/static/login.css">
</head>
<body>
  <div class="main">
    <h1><%=title%></h1>
    <form>
      <input id="username" type="text" placeholder="用户名" autocomplete="username" />
      <input id="password" type="password"  placeholder="密码" autocomplete="current-password" />
      <button id="submit">登录</button>
    </form>
  </div>
  <script src="/static/axios.min.js"></script>
  <script>
    const submitBtn = document.querySelector('#submit')
    submitBtn.addEventListener('click', (e) => {
      e.preventDefault()
      const username = document.querySelector('#username').value.trim()
      const password = document.querySelector('#password').value.trim()
      if (!username) {
        alert('用户名不能为空')
        return false
      }
      if (!password) {
        alert('密码不能为空')
        return false
      }
      axios.post('/login', {
        username,
        password
      })
      .then(res => {
        if (res.data && res.data.code === 0) {
          console.log('登录成功')
          const redirect = new URL(location.href).searchParams.get('redirect') || '/'
          location.href = redirect
        } else {
          alert(res.data.message)
        }
      })
      .catch(err => {
        alert(err.message)
      })
    })
  </script>
</body>
</html>